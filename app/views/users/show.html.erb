<h1 class="text-xl p-4"><%= t('nav.user') %></h1>
<div class="px-4">
  <div class="flex">
    <div class="w-32"><b><%= t('attributes.email') %>:</b></div>
    <div><%= @user.email %></div>
  </div>

  <%= form_with(model: @user.user_setting) do |f| %>
    <div class="flex">
      <div class="w-32"><b><%= t('attributes.settings') %>:</b></div>
      <div>

        <div>
          <%= f.label :housework_tool_enabled, class: "label-text" %>
          <%= f.check_box :housework_tool_enabled, class: "checkbox" %>
        </div>
        <div>
          <%= f.label :creative_tool_enabled, class: "label-text" %>
          <%= f.check_box :creative_tool_enabled, class: "checkbox" %>
        </div>
      </div>
    </div>
    <div class="pt-4">
      <%= f.submit(class: "btn btn-primary btn-outline") %>
      <%= link_to(t('button.sign_out'), destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-outline") %>
    </div>
  <% end %>
</div>
