<h1 class="text-xl p-4"><%= t('nav.user') %></h1>
<div class="px-4">
  <div class="flex">
    <div class="w-32"><b><%= t('attributes.email') %>:</b></div>
    <div><%= @user.email %></div>
  </div>

  <div class="flex">
    <div class="w-32"><b><%= t('attributes.settings') %>:</b></div>
    <div>
      <%= form_with(model: @user, url: "#") do |f| %>
        <%= fields_for(@user.user_setting) do |ff| %>
          <div>
            <%= ff.label :housework_tool_enabled, class: "label-text" %>
            <%= ff.check_box :housework_tool_enabled, class: "checkbox", disabled: true %>
          </div>
          <div>
            <%= ff.label :creative_tool_enabled, class: "label-text" %>
            <%= ff.check_box :creative_tool_enabled, class: "checkbox", disabled: true %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div>
    <%= link_to(t('button.sign_out'), destroy_user_session_path, data: { turbo_method: :delete }, class: "btn") %>
  </div>
</div>
