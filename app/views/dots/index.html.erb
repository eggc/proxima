<div>
  <%= form_with(method: :get) do |f| %>
    <%= f.select(:category, Dot.categories, { selected: params[:category], include_blank: true }, { class: "select select-bordered" }) %>
    <%= f.submit("Search", class: "btn") %>
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3">
  <div class="card bg-base-100 w-96">
    <div class="card-body justify-between">
      <h2 class="card-title">New Dot</h2>
      <div class="card-actions">
        <%= link_to("Create", dots_path(category: params[:category]), data: { turbo_method: :post }, class: "btn btn-primary") %>
      </div>
    </div>
  </div>

  <% @dots.each do |dot| %>
    <div class="card bg-base-100 w-96">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <h2 class="card-title">
            <%= dot.display_order %>.
            <%= dot.content.truncate(15) %>
          </h2>
          <div class="badge badge-outline">
            <%= dot.category %>
          </div>
        </div>
        <div>
          <div>
            <%= dot.content if dot.content.length > 15 %>
            <% if dot.category_task? %>
              <span>
                <%= I18n.l(@dot_tasks[dot.id].created_at, format: :short) %>
              </span>
            <% end %>
          </div>
        </div>
        <div class="flex justify-between items-end mt-4 h-full">
          <!-- <small class="text-slate-400"><%= dot.updated_at %></small> -->
          <div class="card-actions">
            <% if dot.category_task? %>
              <%= link_to("Done", dot_tasks_path(dot_id: dot.id), class: "btn btn-sm", data: { turbo_method: :post }) %>
            <% end %>
            <%= link_to("Edit", edit_dot_path(dot), class: "btn btn-sm") %>
            <%= turbo_destroy_link_to("Destroy", dot_path(dot), confirm: dot.content.present?) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
