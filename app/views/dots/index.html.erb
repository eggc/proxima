<div class="flex space-x-4 px-8">
  <%= link_to("New", dots_path(category: params[:category]), data: { turbo_method: :post }, class: "btn btn-primary") %>

  <%= form_with(method: :get) do |f| %>
    <div class="join">
      <%= f.select(:category, Dot.categories, { selected: params[:category], include_blank: true }, { class: "select select-bordered join-item" }) %>
      <%= f.submit("🔍", class: "btn join-item") %>
    </div>
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3">
  <% @dots.each do |dot| %>
    <div class="card bg-base-100 w-96" id="<%= dot.id %>">
      <div class="card-body">
        <div class="flex items-center justify-between border-b-2 border-primary">
          <h2 class="card-title">
            <a href="#<%= dot.id %>">
              <div class="badge badge-outline">
                <%= dot.category %>
              </div>
              <small>
                <%= dot.content.truncate(14) %>
              </small>
            </a>
          </h2>
          <div>
            <% if @dot_tasks[dot.id] %>
              <small>
                <%= I18n.l(@dot_tasks[dot.id].created_at, format: :very_short) %>
              </small>
            <% end %>
          </div>

        </div>
        <div>
          <div>
            <%= dot.content if dot.content.length > 15 %>
          </div>
        </div>
        <div class="flex justify-between items-end h-full">
          <!-- <small class="text-slate-400"><%= dot.updated_at %></small> -->
          <div class="card-actions">
            <% if dot.category_task? %>
              <%= link_to("Done", dot_tasks_path(dot_id: dot.id), class: "btn btn-xs", data: { turbo_method: :post }) %>
            <% end %>
            <%= link_to("Edit", edit_dot_path(dot), class: "btn btn-xs") %>
            <%= turbo_destroy_link_to(path: dot_path(dot), confirm: dot.content.present?, class: "btn btn-xs") %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
