<% characters.each do |character| %>
  <div>
    <%= character.display_order %>
    <%= character.name %>
    <%= character.gender %>
    <%= character.job %>
    <%= character.age %>
    <%= character.interests %>
    <%= character.projects&.map(&:title) if hidden_columns.exclude?(:projects) %>
    <%= link_to("edit", edit_character_path(character)) %>
    <%= link_to("destroy", character_path(character), data: { turbo_method: :delete }) %>
  </div>
<% end %>
