<%= form_with(model: @notebook) do |f| %>
  <div>
    <label class="form-control">
      <div class="label"><span class="label-text">Name</span></div>
      <%= f.text_field(:name, class: "input input-bordered") %>
    </label>

    <label class="form-control">
      <div class="label"><span class="label-text">Number</span></div>
      <%= f.number_field(:display_order, class: "input input-bordered") %>
    </label>

    <div class="pt-4">
      <%= f.submit(class: "btn btn-primary btn-outline") %>
      <%= link_to(t('button.cancel'), notebooks_path, class: "btn btn-outline") %>
    </div>
  </div>
<% end %>
