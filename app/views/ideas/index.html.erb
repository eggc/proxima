<%= form_with(method: :get) do |f| %>
  <%= f.select(:emote, Idea.emotes, { selected: params[:emote], include_blank: true }, { class: "select select-bordered" }) %>
  <%= f.submit("Search", class: "btn") %>
<% end %>

<div class="p-2">
  <%= render('shared/idea_table', ideas: @ideas, hidden_columns: [:projects])%>
</div>

<%= link_to("new", ideas_path, data: { turbo_method: :post }, class: "btn") %>
