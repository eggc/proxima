<!DOCTYPE html>
<html>
  <head>
    <title>Proxima</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- https://daisyui.com/docs/cdn/ -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body>
    <header class="navbar">
      <%= link_to(root_path) do %>
        <h1>Proxima</h1>
      <% end %>

      <nav>
        <ul class="menu menu-horizontal">
          <% if signed_in? %>
            <li>
              <%= link_to('Ideas', ideas_path) %>
            </li>
            <li>
              <details>
                <summary>Workspaces</summary>
                <ul class="w-max">
                  <% header_context[:workspaces].each do |workspace| %>
                    <% if workspace == current_workspace %>
                      <li>
                        <a class="active"><%= workspace.name %></a>
                      </li>
                    <% else %>
                      <li>
                        <%= link_to(workspace.name, current_workspace_path(id: workspace.id), data: { turbo_method: :put }) %>
                      </li>
                    <% end %>
                  <% end %>
                  <hr />
                  <li><%= link_to('new workspace', new_workspace_path)%></li>
                  <li><%= link_to('edit current workspace', edit_workspace_path(current_workspace)) %></li>
                </ul>
              </details>
            </li>
            <li>
              <details>
                <summary>ðŸ‘¤ <%= current_user.email %></summary>
                <ul class="w-max">
                  <li><%= link_to('details', user_path) %></li>
                  <li><%= link_to('sign out', destroy_user_session_path, data: { turbo_method: :delete }) %></li>
                </ul>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>

    <main class="p-6">
      <% if flash.alert %>
        <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50" role="alert">
          <%= flash.alert %>
        </div>
      <% end %>

      <%= yield %>
    </main>

    <footer>
      <% if signed_in? %>
        <nav>
          <div>
            å»ƒæ­¢æ¤œè¨Žä¸­
            <%= link_to('root', root_path) %> |
            <%= link_to('tree', tree_path) %> |
            <%= link_to('projects', projects_path) %> |
            <%= link_to('project_parts', project_parts_path) %> |
            <%= link_to('characters', characters_path) %> |
          </div>
        </nav>
        <% end %>
      </footer>
  </body>
</html>
