<ul class="menu rounded-box">
  <% @notebooks.each do |notebook| %>
    <li>
      <%= link_to(edit_notebook_path(notebook)) do %>
        <%= notebook.name %>
        <% if notebook == current_notebook %>
          <span class="text-primary">
            (current notebook)
          </span>
        <% end %>
      <% end %>
      <ul>
        <% notebook.pages.each do |page| %>
          <li>
            <%= link_to(edit_page_path(page), class: "min-h-8") do%>
              <div class="badge badge-outline"><%= page.category %></div>
              <%= page.content.truncate(40) %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
