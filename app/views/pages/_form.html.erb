<%= form_with(model: @page) do |f| %>
  <div>
    <label class="form-control">
      <div class="label"><span class="label-text">Content</span></div>
      <%= f.text_area(:content, class: "textarea textarea-bordered") %>
    </label>

    <label class="form-control">
      <div class="label"><span class="label-text">Emote</span></div>
      <%= f.select(:category, Page.categories, {}, { class: "select select-bordered" }) %>
    </label>

    <label class="form-control">
      <div class="label"><span class="label-text">Number</span></div>
      <%= f.number_field(:display_order, class: "input input-bordered") %>
    </label>

    <div class="pt-4">
      <%= f.submit(class: "btn btn-primary btn-outline") %>
      <%= link_to(t('button.cancel'), notebook_pages_path(@page.notebook), class: "btn btn-outline") %>
    </div>
  </div>
<% end %>
