<%= form_with(method: :get) do |f| %>
  <%= f.select(:project_id, @selectable_projects, include_blank: true) %>
  <%= f.submit "Search" %>
<% end %>

<% @characters.each do |character| %>
  <div>
    <%= character.display_order %>
    <%= character.name %>
    <%= character.gender %>
    <%= character.job %>
    <%= character.age %>
    <%= character.interests %>
    <%= character.projects&.map(&:title) %>
    <%= link_to("edit", edit_character_path(character)) %>
    <%= link_to("destroy", character_path(character), data: { turbo_method: :delete }) %>
  </div>
<% end %>

<%= link_to("new", new_character_path) %>
