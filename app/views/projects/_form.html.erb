<%= form_with(model: @project) do |f| %>
  <div>
    <div>theme: <%= f.text_field(:theme) %></div>
    <div>related ideas: <%= f.select(:idea_ids, @selectable_ideas, selected: @selected_idea_ids, multiple: true) %></div>
    <div>title: <%= f.text_field(:title) %></div>
    <div>media: <%= f.select(:media, Project.media) %></div>
    <div>description: <%= f.text_area(:description) %></div>
    <div>display order: <%= f.number_field(:display_order) %></div>
    <div><%= f.submit %></div>
  </div>
<% end %>
